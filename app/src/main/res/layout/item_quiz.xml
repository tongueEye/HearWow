<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height"
    android:layout_marginBottom="@dimen/layout_margin_bottom"
    android:background="@drawable/view_round_white2">

    <ImageView
        android:id="@+id/IconIV"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/skull1"/>

    <TextView
        android:id="@+id/QuestionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/nexon_cart_gothic_bold"
        android:text="@string/QuizName"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toEndOf="@+id/IconIV"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/optionBtn"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/options_white" />
</androidx.constraintlayout.widget.ConstraintLayout>