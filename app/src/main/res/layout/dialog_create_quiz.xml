<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_round_darknight"
    android:orientation="vertical">

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/white"
        android:fontFamily="@font/nexon_cart_gothic_bold"
        android:text="낱말 카드 만들기" />

    <ImageView
        android:id="@+id/add_photo_IV"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/add_photo_white" />

    <ImageView
        android:id="@+id/imageDeleteBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginTop="-210dp"
        android:layout_marginBottom="190dp"
        android:layout_marginRight="95dp"
        android:visibility="gone"
        app:srcCompat="@drawable/delete_btn" />

    <EditText
        android:id="@+id/quizEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/view_round_white"
        android:fontFamily="@font/nexon_cart_gothic_medium"
        android:gravity="center"
        android:hint="단어나 문장을 입력하세요."
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="text"
        android:textSize="23sp"
        android:maxLines="6"
        android:maxLength="100" />

    <TextView
        android:id="@+id/qtextCountTV"
        android:textAlignment="textEnd"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nexon_cart_gothic_medium"
        android:text="@string/dialog_create_text_count" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/cancelBtn"
            android:background="@drawable/view_round_white2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:text="취소"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/nexon_cart_gothic_bold"
            android:textSize="18sp" />

        <android.widget.Button
            android:id="@+id/saveBtn"
            android:background="@drawable/view_round_white"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="저장"
            android:textColor="@color/dark_night"
            android:textStyle="bold"
            android:fontFamily="@font/nexon_cart_gothic_bold"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>